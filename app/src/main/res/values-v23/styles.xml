<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:navigationBarColor">@android:color/darker_gray</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:navigationBarColor">@android:color/darker_gray</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme" >
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="AppTheme" >
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>