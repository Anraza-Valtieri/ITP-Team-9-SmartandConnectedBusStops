<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transitcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    android:layout_marginEnd="@dimen/card_margin_right"
    android:layout_marginStart="@dimen/card_margin_left"
    android:layout_marginTop="@dimen/card_margin_top"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="@dimen/card_corner_rad"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:elevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="XX hours" />

        <TextView
            android:id="@+id/textViewTotalDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTotalTime"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="XX km" />

        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/textViewTotalDistance"
            tools:text="$ X.XX" />

        <View
            android:id="@+id/breakdownBar"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_gravity="center"
            android:layout_below="@+id/textViewTotalDistance"
            android:background="#a40404" />

        <LinearLayout
            android:id="@+id/startingJourney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/breakdownBar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewStartingStation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:background="@drawable/ic_directions_bus_black_24dp" />

            <TextView
                android:id="@+id/textViewStartingStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:text="Farrer Park" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewTimeTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startingJourney"
            android:layout_marginTop="0dp"
            tools:text="X mins" />

        <TextView
            android:id="@+id/textViewNumStops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startingJourney"
            android:layout_toEndOf="@id/textViewTimeTaken"
            tools:text="( X stops)" />


        <View
            android:id="@+id/dividerBeforeTransferStation"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_below="@id/textViewNumStops" />

        <TextView
            android:id="@+id/textViewTransferStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNumStops"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="Transfer station" />

        <View
            android:id="@+id/dividerBeforeEndStation"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_below="@id/textViewTransferStation"
            />

        <LinearLayout
            android:id="@+id/endingJourney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dividerBeforeEndStation"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewEndingStation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:background="@drawable/ic_directions_bus_black_24dp" />

            <TextView
                android:id="@+id/textViewEndingStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:text="Dhoby Ghaut MRT" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>