<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transitcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    android:layout_marginEnd="@dimen/card_margin_right"
    android:layout_marginStart="@dimen/card_margin_left"
    android:layout_marginTop="@dimen/card_margin_top"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_rad"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:elevation="@dimen/card_elevation">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/favoritebtnTransit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/transparent"
            android:cropToPadding="true"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="XX hours" />

        <TextView
            android:id="@+id/textViewTotalDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textViewTotalTime"
            tools:text="XX km" />

        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textViewTotalDistance"
            card_view:layout_constraintStart_toEndOf="@+id/textViewTotalDistance"
            card_view:layout_constraintTop_toTopOf="@+id/textViewTotalDistance"
            tools:text="$X.XX" />

        <LinearLayout
            android:id="@+id/linearLayoutBreakdownBar"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            card_view:layout_constraintTop_toBottomOf="@+id/textViewTotalDistance"/>

        <LinearLayout
            android:id="@+id/linearLayoutTransitStops"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/linearLayoutBreakdownBar" />

        <TextView
            android:id="@+id/textViewCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/holo_green_dark"
            card_view:layout_constraintBottom_toBottomOf="@+id/textViewTotalTime"
            card_view:layout_constraintStart_toEndOf="@+id/textViewTotalTime"
            card_view:layout_constraintTop_toTopOf="@+id/textViewTotalTime"
            tools:text="* Suggested Route *" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>