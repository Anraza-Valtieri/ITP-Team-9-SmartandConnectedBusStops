<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_toolbar_navigate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_shadow_white"
    android:elevation="4dp"
    android:minHeight="200dp"
    android:theme="?attr/actionBarTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|bottom|center_vertical|center_horizontal"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/relLayout1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/chip_shape"
                android:backgroundTint="@android:color/white"
                android:elevation="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/optionButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/textViewStartingPoint"
                    style="@android:style/Widget.Material.AutoCompleteTextView"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:popupBackground="@android:color/white"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <!--<ImageButton
                            android:id="@+id/imgBtnCancel"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/ic_cancel" />-->

                <ImageButton
                    android:id="@+id/imgBtnStartVoiceSearch"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:src="@drawable/ic_voice_search_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relLayout2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/chip_shape"
                android:backgroundTint="@android:color/white"
                android:elevation="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/searchButton"
                app:layout_constraintHorizontal_bias="0.625"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relLayout1">

                <AutoCompleteTextView
                    android:id="@+id/textViewDestination"
                    style="@android:style/Widget.Material.AutoCompleteTextView"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="@string/destination"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:popupBackground="@android:color/white"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <!--<ImageButton
                            android:id="@+id/imgBtnCancel"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/ic_cancel" />-->

                <ImageButton
                    android:id="@+id/imgBtnDestVoiceSearch"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:src="@drawable/ic_voice_search_black_24dp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/optionButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/ic_switch"
                android:gravity="center_vertical|center_horizontal"
                app:layout_constraintBottom_toTopOf="@+id/relLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/relLayout1" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/ic_route_search"
                android:gravity="center_vertical|center_horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/relLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/relLayout2" />

            <LinearLayout
                android:id="@+id/relLayout3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/relLayout2">


                <TextView
                    android:id="@+id/tvDisplayFares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/displayfares" />

                <Spinner
                    android:id="@+id/fare_type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:minHeight="32dp"
                    android:popupTheme="@style/AppTheme"
                    android:theme="@style/AppTheme" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/relLayout4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.625"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relLayout3">


                <TextView
                    android:id="@+id/tvSortBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/sortby" />

                <Spinner
                    android:id="@+id/sort_by_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:minHeight="32dp"
                    android:popupTheme="@style/AppTheme"
                    android:theme="@style/AppTheme" />

            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relLayout4">

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Tab2"
                    android:visibility="visible" />
            </android.support.design.widget.TabLayout>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.v7.widget.Toolbar>