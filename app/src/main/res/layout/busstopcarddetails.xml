<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/busnumber"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#669900"
        android:minWidth="40dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="555e"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/direction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:text="Pasir Ris Int"
        android:visibility="gone" />

    <TextView
        android:id="@+id/operator"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="45dp"
        android:text="SBS"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/busnumber"
        app:layout_constraintTop_toTopOf="@+id/busnumber" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/buscard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minHeight="20dp"
        android:minWidth="93dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/operator"
        app:layout_constraintEnd_toStartOf="@+id/buscard2"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/operator"
        app:layout_constraintTop_toTopOf="@+id/operator">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/duration1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:minWidth="60dp"
            android:paddingBottom="1dp"
            android:paddingEnd="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="8dp"
            android:paddingTop="1dp"
            android:text="@string/_4_min"
            android:textAlignment="center"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="120sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/wheel1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="30dp"
            tools:text="12 min" />

        <ImageView
            android:id="@+id/wheel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:adjustViewBounds="false"
            android:padding="0dp"
            android:src="@drawable/ic_accessible_black_24dp"
            android:tint="@android:color/darker_gray"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="10dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/buscard2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:minHeight="20dp"
        android:minWidth="93dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/buscard1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buscard1">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/duration2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxEms="6"
            android:maxLines="2"
            android:maxWidth="90dp"
            android:minLines="1"
            android:minWidth="60dp"
            android:paddingBottom="1dp"
            android:paddingEnd="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="8dp"
            android:paddingTop="1dp"
            android:text="@string/_4_min"
            android:textAlignment="center"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="120sp"
            app:autoSizeMinTextSize="7sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/wheel2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="30dp"
            tools:text="12 min" />

        <ImageView
            android:id="@+id/wheel2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:src="@drawable/ic_accessible_black_24dp"
            android:tint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/duration2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/duration2"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="10dp" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/dividerBot"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
